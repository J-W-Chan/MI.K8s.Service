@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/css/LoginCss.css" rel="stylesheet" />
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".btn-primary").click(Register);
        });

        //注册按钮
        function Register()
        {
            var userName = $("#user_email").val();
            var userPwd = $("#user_password").val();
            $.get("/Login/RegisterUser", { UserName: userName, UserPwd: userPwd }, function (data) {
                switch (data)
                {
                    case "ok":
                        alert("注册成功");
                        window.location.href = "/Home/Index";
                        break;
                    case "err":
                        alert("用户名已被注册");
                        $("#user_email").focus();
                        break;
                }
            }, "json");
        }
    </script>
</head>
<body>
    <header>
        <div class="mid">
            <div class="form-container">
                <div class="form-behavior divider">
                    <span>注册</span>
                </div>
                <div>
                    <div>
                        <div>
                            <input class="form-control" autofocus="autofocus" placeholder="邮箱" type="email" name="user[email]" id="user_email">
                            <span></span>
                        </div>
                        <div>
                            <input class="form-control" autocomplete="off" placeholder="密码" type="password" name="user[password]" id="user_password">
                            <span></span>
                        </div>
                        <div class="form-group action">
                            <input type="button" class="btn btn-block btn-primary" value="注册" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </header>
</body>
</html>
